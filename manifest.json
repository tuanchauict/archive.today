{
    "manifest_version": 3,
    "name": "Archive.today Quick Access",
    "description": "Quick access to archive.today with URL parameter trimming for specific sites",
    "version": "1.0",
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}